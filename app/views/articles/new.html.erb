<h1>New Article</h1>

<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |message| %>
    <h3><%= message %></h3>
    <% end %>
    <% end %>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.submit %>
    </p>

<% end %>